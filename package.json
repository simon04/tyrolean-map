{
  "name": "tyrolean-map",
  "version": "1.0.0",
  "private": "true",
  "description": "Frontend to various maps published by Land Tirol and South Tyrol as Open Government Data",
  "main": "app.ts",
  "scripts": {
    "build": "esbuild --bundle app.ts --outdir=dist/ --target=es6 --minify --sourcemap --loader:.png=file --loader:.gif=file",
    "fix:style": "prettier --write $(git ls-files '*.ts' '*.html')",
    "test": "prettier --check $(git ls-files '*.ts' '*.html')"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simon04/tyrolean-map.git"
  },
  "author": "Simon Legner <Simon.Legner@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simon04/tyrolean-map/issues"
  },
  "homepage": "https://github.com/simon04/tyrolean-map#readme",
  "dependencies": {
    "leaflet": "^1.7.1",
    "leaflet-control-geocoder": "^2.3.0",
    "leaflet.locatecontrol": "^0.72.0"
  },
  "devDependencies": {
    "@types/leaflet": "^1.7.6",
    "@types/leaflet.locatecontrol": "^0.74.0",
    "esbuild": "^0.13.12",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0"
  }
}
